---
Language: Cpp
BasedOnStyle: Google
IndentWidth: 2
ContinuationIndentWidth: 2
ColumnLimit: 0
DerivePointerAlignment: false
PointerAlignment: Left
NamespaceIndentation: All
AlignConsecutiveBitFields: true
BitFieldColonSpacing: Both
AlignTrailingComments: true
AllowShortBlocksOnASingleLine: Empty
AllowShortCaseLabelsOnASingleLine: true
AllowShortLambdasOnASingleLine: Inline
AlwaysBreakTemplateDeclarations: Yes
BreakBeforeConceptDeclarations: true
BreakBeforeTernaryOperators: false
CompactNamespaces: false
SpaceBeforeInheritanceColon: true
SpaceBeforeParens: ControlStatements
IndentRequires: true
AlignOperands: DontAlign
FixNamespaceComments: true

BreakBeforeBraces: Custom
BraceWrapping:
  AfterEnum: false
  AfterStruct: false
  AfterClass: false
  SplitEmptyFunction: false
  AfterControlStatement: false
  AfterNamespace: false
  AfterFunction: false
  AfterUnion: false
  AfterExternBlock: false
  BeforeCatch: false
  BeforeElse: false
  SplitEmptyRecord: false
  SplitEmptyNamespace: false

IncludeCategories:
  # Headers in <> without extension.
  - Regex:           '<([A-Za-z0-9\/-_])+>'
    Priority:        1
  # Headers in <> from specific external libraries.
  - Regex:           '<(glm|spdlog|entt|glad|gtest|imgui|json|magic_enum)\/'
    Priority:        2
  - Regex:           '<(SDL)+>'
    Priority:        2
  # Headers in <> with extension.
  - Regex:           '<([A-Za-z0-9\/-_])+\.h(pp|xx|h)?>'
    Priority:        3

  # core headers
  - Regex:           '"((core|application|math|thread)\/)'
    Priority:        4
  # application/asset/semi-core system headers
  - Regex:           '"((input|event|asset|parsing|project|plugin|layers)\/)'
    Priority:        5
  # scene/ecs headers
  - Regex:           '"((scene|ecs)\/)'
    Priority:        6
  # rendering/scripting/physics headers
  - Regex:           '"((rendering|scripting|physics)\/)'
    Priority:        8
---
Language: CSharp
BreakBeforeBraces: Custom
BraceWrapping:
  AfterEnum: false
  AfterStruct: false
  AfterClass: false
  SplitEmptyFunction: false
  AfterControlStatement: false
  AfterNamespace: false
  AfterFunction: false
  AfterUnion: false
  AfterExternBlock: false
  BeforeCatch: false
  BeforeElse: false
  SplitEmptyRecord: false
  SplitEmptyNamespace: false
---
Language: Proto
DisableFormat: true
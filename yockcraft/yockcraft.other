[project]
name = "yockcraft"
author = "Y"
version = 0.0.1
description = "description"
scenes = { 
  "overworld.yscn" 
}
assets = "./assets"
primary-scene = "overworld"
bin-dir = "../bin/Debug/"
script-bin-dir = "YockCraftScripts"

[window]
width = 1200
height = 800
title = "YockCraft"
clear-color = { 0.3 , 0.3 , 0.3 , 1.0 }

[log]
console-level = "info" 
file-level = "trace"
path = "./logs/yockcraft.log"

[script-engine.C#]
paths = {
  "YockCraftScripts.dll"
}

[editor]
scripts = {
  "debug.lua"
}

[editor.script]
debug = { "Debug" }
